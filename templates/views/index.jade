extends ../layouts/default

block content
	#landing-hero-1
	#landing-about
		.container-fluid
			h1.headline Yoga from the inside-out.
			p.landing-about-body1 
				| With yoga trainings for novices to instructors, 
				| I bring 30 years of study, passion and knowledge to every 
				| class and training! Through Embodied-inquery&#8482;,
				| together we will explore the physical, spiritual, and
				| intellectual growth that you are seeking, so you can 
				| realize your fullest potential.
				<br>
				<br>
				block.landing-quote
					| Yoga is like music. The rhythm of the body, the 
					| melody of the mind and the harmony of the soul 
					| create the symphony of life.
				cite - BKS Iyengar
			h2.landing-about-header2 Eager to learn more?
			p.landing-about-body2 
				| Read about 
				a(href='/') my yoga journey.
				br
				br
				| For deeper explorations into the anatomical and philosophical
				| aspects of yoga, venture over to 
				a(href='/') my blog.
			a(href='/contact').btn.btn-contact 
				| Ready to grow together?
				hr.btn-divider
				span.btn-contact-footer Click here to get in touch
	#landing-workshops
		.container-fluid
			h1.headline Workshops
			!{ workshops.content.full }
			div.workshops-btn-grp
				a(href='/').btn.btn-workshops Teacher Training
				a(href='/').btn.btn-workshops View Classes
	#landing-hero-2
	#landing-audio
		.container-fluid
			h1.headline Workshops
			!{ workshops.content.full }
			div.workshops-btn-grp
				a(href='/').btn.btn-audio Teacher Training
				a(href='/').btn.btn-audio View Classes


	


